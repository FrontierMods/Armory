    },

    "//weight": [
      "based on a study published in IAWA Journal",
      "https://brill.com/view/journals/iawa/3/3-4/article-p207_13.xml",
      "birch bark density (559.3 kg/m3 = 0.5593 g/ml) × volume (253 ml) = 141.5029 g ≈ 142 g"
    ],
    "weight": "142 g",
    "//dimensions": {
      "length": "15.00 in",
      "width": "2.50 in",
      "height": "0.5 in",
